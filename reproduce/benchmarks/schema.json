{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/econ-ark/method-of-moderation/schemas/benchmark.json",
  "title": "Method of Moderation Benchmark Result",
  "description": "Schema for Method of Moderation reproduction benchmark results",
  "type": "object",
  "required": [
    "benchmark_version",
    "benchmark_id",
    "timestamp",
    "timestamp_end",
    "reproduction_mode",
    "exit_status",
    "duration_seconds",
    "system",
    "environment",
    "git",
    "metadata"
  ],
  "properties": {
    "benchmark_version": {
      "type": "string",
      "description": "Version of the benchmark format"
    },
    "benchmark_id": {
      "type": "string",
      "description": "Unique identifier for this benchmark"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of benchmark start"
    },
    "timestamp_end": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of benchmark end"
    },
    "reproduction_mode": {
      "type": "string",
      "enum": ["full", "min"],
      "description": "Reproduction mode: full or min"
    },
    "exit_status": {
      "type": "integer",
      "description": "Exit status code (0 = success)"
    },
    "duration_seconds": {
      "type": "number",
      "minimum": 0,
      "description": "Total duration in seconds"
    },
    "system": {
      "type": "object",
      "description": "System information"
    },
    "environment": {
      "type": "object",
      "description": "Python environment information"
    },
    "git": {
      "type": "object",
      "description": "Git repository state"
    },
    "metadata": {
      "type": "object",
      "description": "Additional metadata"
    }
  }
}
